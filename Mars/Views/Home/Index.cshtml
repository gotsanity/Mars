@model IEnumerable<BlogPost>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to the blog.</h1>
</div>

<div class="card-deck">
    @foreach (BlogPost post in Model)
    {
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">@post.Title</h5>
                <h6 class="card-subtitle mb-2 text-muted">@post.AuthorId</h6>
                <p class="card-text">@post.Body</p>
                <a class="card-link" asp-area="" asp-controller="post" asp-action="Details" asp-route-id="@post.BlogPostID">Details</a>
            </div>
        </div>
    }
</div>
