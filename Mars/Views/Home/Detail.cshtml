@model Mars.Models.BlogPost

@{
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h1>@Html.DisplayFor(m => m.Title)</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-6">
            <p class="text-muted">Author: @Html.DisplayFor(m => m.UserId)</p>
        </div>
        <div class="col-6">
            <p class="text-muted">Last Edited: @Html.DisplayFor(m => m.EditedOn)</p>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            @Html.DisplayFor(m => m.Body)
        </div>
    </div>
</div>
